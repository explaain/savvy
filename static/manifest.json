{
  "name": "Savvy",
  "short_name": "Savvy",
  "description": "Remember anything",
  "version": "0.4.0",
  "manifest_version": 2,
  "icons": {
    "16": "chrome/images/icon16.png",
    "48": "chrome/images/icon48.png"
  },
  "content_scripts" : [{
    "matches" : [
      "*://*/*"
    ],
    "js" : [
      "chrome/manifest.js",
      "chrome/vendor.js",
      "chrome/contentScript.js"
    ]
  }],
  "background": {
    "scripts": [
      "chrome/js/firebase.js",
      "chrome/manifest.js",
      "chrome/vendor.js",
      "chrome/eventPage.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "48": "chrome/images/icon48.png"
    },
    "default_title": "__MSG_browserActionTitle__"
  },
  "chrome_url_overrides" : {
    "newtab": "index.html"
  },
  "content_security_policy": "script-src 'self' https://www.gstatic.com/ https://*.firebaseio.com https://www.googleapis.com https://apis.google.com/; object-src 'self'",
  "web_accessible_resources": [
    "index.html",
    "sidebar.html"
  ],
  "permissions": [
    "bookmarks",
    "clipboardRead",
    "clipboardWrite",
    "commands",
    "contentSettings",
    "contextMenus",
    "cookies",
    "debugger",
    "declarativeContent",
    "history",
    "identity",
    "management",
    "notifications",
    "pageCapture",
    "proxy",
    "tabCapture",
    "tabs",
    "topSites",
    "webNavigation",
    "http://localhost:5000/*",
    "http://localhost:3000/*",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "oauth2": {
    "client_id": "gbjmlelijbjldbpmdnilhbnmcnfmpmjc",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile"
    ]
  },
  "key": "-----BEGIN PUBLIC KEY----------END PUBLIC KEY-----"
}
